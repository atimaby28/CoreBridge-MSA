version: '3.8'
services:
  redis:
    image: redis/redis-stack-server
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data

  fastapi:
    build: ./fastapi
    ports:
      - "9001:9001"
    environment:
      - OLLAMA_HOST=http://host.docker.internal:11434  # 로컬 Ollama 연결
      - REDIS_HOST=redis
    depends_on:
      - redis

volumes:
  redis_data: